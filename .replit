modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Server"

[[workflows.workflow]]
name = "MCP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && npm run dev:http"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "MCP_TRANSPORT=http PORT=5000 node build/index.js"]
build = ["npm", "run", "build"]
publicDir = "build"

[userenv]

[userenv.production]
MCP_TRANSPORT = "http"
PORT = "5000"
